{
  "buildCommand": "npm run build:staging",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/batch_download.html",
      "destination": "/batch_download.html"
    },
    {
      "source": "/download_config.json",
      "destination": "/download_config.json"
    },
    {
      "source": "/((?!api|_next|_static|favicon.ico|batch_download.html|download_config.json).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/batch_download.html",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/download_config.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
